@model PersonalSite1.UI.MVC.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
}

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "ContactCreateForm" }))
{
    @Html.AntiForgeryToken()

    <div class="php-email-form mt-4">
        <div class="form-row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-6 form-group">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "name", placeholder = "First and Last Name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "validate" })
            </div>

            <div class="col-md-6 form-group">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", name="email", id="email", placeholder="Your Email"}
                })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "validate" })
            </div>
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", name = "subject", id = "subject", placeholder = "Subject" } })
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "validate" })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", name = "message", placeholder = "Message", rows = "5" } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "validate" })
        </div>

            <div class="text-center"><button type="submit">Send Message</button></div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
